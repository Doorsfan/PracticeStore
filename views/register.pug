doctype
html(lang='')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    //- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    meta(name='description', content='A webshop project')
    meta(name='author', content='Mikael Rusin')
    title(id='title') #{title}
    link(rel='stylesheet', href='/css/register.css')
    //- link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css', rel='stylesheet')
    //- link(href='/css/style.css', rel='stylesheet')
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
     //if lt IE 9

    script(src='/frontend_scripts/register_frontend.js')
  body(id='body')
    main
      h1(id='title') #{title}
      block header
        header(id='header')
          form(id='register_form', method="post", action="/register")
            p(id='usertextP') Username: 
              |
            p(id='usernameP')
              | 
              input(id='usernameInput', type='username', name='username', value='', placeholder='Enter your username here..', required)
              img(id='usernameYorN')
              p(id='usernameYorNtext') #{invalidUsername}
            p(id='emailtextP') Email:
              |
            p(id='emailP')
              |  
              input(id='emailInput', type='email', name='email', value='', placeholder='your.email@example.com', required)
              img(id='emailYorN')
              p(id='emailYorNtext') #{invalidEmail}
            p(id='passwordtextP') Password:
              |
            p(id='passwordP')
              |
              input(id='passwordInput', type='text', name='password', value='', placeholder='Enter your password here..', required)
              img(id='passwordYorN')
              p(id='passwordYorNtext')
            p(id='confirmpasswordtextP') Confirm Password:
              |
            p(id="confirmpasswordP")
              |
              input(id='confirmpasswordInput', type='password', name='confirmPassword', value='', placeholder="Repeat your password here..", required)
              img(id='confirmpasswordYorN')
              p(id='confirmpasswordYorNtext')
            p(id='submitP')
              |
              input(id='register_button', type='submit', name='Register', value='Register')
      block.content